pipeline {
    agent {
        label 'docker'
    }

    environment {
        SLACK_TOKEN = credentials('SLACK_TOKEN')
    }

    triggers {
        cron('0 */4 * * *')
    }

    stages {
        stage ('Checkout') {
            steps {
                checkout scm
            }
        }

        stage ('Run') {
            steps {
                sh """
                    make run
                """
            }
        }
    }
}